<Window x:Class="Weight_Converter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weight_Converter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <WrapPanel>
            <Label Content="From Units:"/>
            <ComboBox Name="unitsChoice">
                <ComboBoxItem IsSelected="True">KG to lbs</ComboBoxItem>
                <ComboBoxItem>lbs to KG</ComboBoxItem>
            </ComboBox>
            <TextBox Name="fromInput" PreviewTextInput="NumberValidationTextBox"/>
        </WrapPanel>
        <WrapPanel Grid.Row="1">
            <Label Content="To Units:"/>
            <TextBlock Name="toOutput" Text="{Binding userNumber}"/>
        </WrapPanel>
        <Button Grid.Row="2" Name="btnConvert" Click="BtnClick">Convert</Button>
    </Grid>
</Window>
